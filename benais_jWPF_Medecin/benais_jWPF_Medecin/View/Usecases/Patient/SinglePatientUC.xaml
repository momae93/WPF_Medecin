<UserControl x:Class="benais_jWPF_Medecin.View.Usecases.Patient.SinglePatientUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:benais_jWPF_Medecin.View.Usecases.Patient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Command="{Binding BackCommand}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0 0 0">Back</Button>
        <TabControl Grid.Row="1">
            <TabItem Header="Details">
                <ContentControl Content="{Binding DetailsUC}"/>
            </TabItem>
            <TabItem Header="Observations">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Observations</TextBlock>
            </TabItem>
            <TabItem Header="Graph">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Graph</TextBlock>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
